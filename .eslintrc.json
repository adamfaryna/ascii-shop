{
  "extends": ["eslint:recommended", "angular"],

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "jasmine": true
  },
  "plugins": [ "html", "react", "angular" ],
  "settings": {
      "html/indent": "0",
      "html/indent": "+2",
      "html/indent": "space",
      "html/no-eval": "off"
  },
  "rules": {
    "indent": ["error", 2],
    "no-console": 1,
    "no-unused-vars": 1,
    "react/jsx-quotes": 0,
    "jsx-quotes": [2, "prefer-double"],
    "angular/controller-name": "off",
    "angular/di": [2, "array"]
  }
}
